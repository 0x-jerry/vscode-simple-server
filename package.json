{
  "name": "@0x-jerry/vscode-simple-server",
  "version": "0.0.0",
  "description": "Utils to start a preview server",
  "type": "module",
  "engines": {
    "node": ">= 18"
  },
  "license": "MIT",
  "author": "0x-jerry <x.jerry.wang@gmail.com>",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsx src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "build": "tsup",
    "prepublishOnly": "npm run build",
    "release": "x-release"
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "format": [
      "esm"
    ],
    "dts": true,
    "clean": true,
    "external": [
      "vscode"
    ]
  },
  "devDependencies": {
    "@0x-jerry/x-release": "^2.2.2",
    "@types/node": "^22.8.2",
    "@types/vscode": "^1.60.0",
    "@vitest/coverage-v8": "^2.1.4",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "vitest": "^2.1.4"
  },
  "dependencies": {
    "@0x-jerry/utils": "^3.0.2"
  }
}